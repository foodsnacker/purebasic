;#########################;#     TinyCompare 0.8.0 #;#     Compare The Files #;# (p) 2022 Jörg Burbach #;#########################EnableExplicitGlobal FingerType = #PB_Cipher_MD5Global MD5a$, MD5b$, Type$ = "MD5"Global File1$, File2$Define i, Event, GadgetProcedure.s Check(Gadget,a$)  SetGadgetText(Gadget, Str(gadget + 1) + ". " + GetFilePart(a$) + " - " + StrF(FileSize(a$) / 1024, 3) + "kb - " + FormatDate("%yyyy-%mm-%dd %hh:%ii:%ss", GetFileDate(a$, #PB_Date_Modified)))  ProcedureReturn FileFingerprint(a$,FingerType)EndProcedureProcedure CompareAB()  If MD5a$ = "" Or MD5b$ = ""    ProcedureReturn  EndIf    If MD5a$ = "" And MD5b$ = ""    MessageRequester("Information", "Please select two files to compare.")  Else    If MD5a$ = MD5b$       SetGadgetText(3, "Most likely identical")    Else      SetGadgetText(3, "Most likely different")    EndIf  EndIfEndProcedureProcedure LoadAFile(Gadget)  Define temp$ = OpenFileRequester("Select file", "", "", 0)  If temp$ <> ""    If Gadget = 0      File1$ = temp$      MD5a$ = Check(Gadget, File1$)      GadgetToolTip(Gadget, Type$ + ": " + MD5a$)    Else      File2$ = temp$      MD5b$ = Check(Gadget, File2$)      GadgetToolTip(Gadget, Type$ + ": " + MD5b$)    EndIf  EndIfEndProcedureProcedure CheckFiles()  MD5a$ = Check(0, File1$)  GadgetToolTip(0, Type$ + ": " + MD5a$)  MD5b$ = Check(1, File2$)  GadgetToolTip(1, Type$ + ": " + MD5b$)  EndProcedureOpenWindow  (0,0,0,360,135,"TinyCompare 0.8.0", #PB_Window_WindowCentered | #PB_Window_ScreenCentered)ButtonGadget(0, 10, 10,340, 24, ".. please select a file ..")ButtonGadget(1, 10, 44,340, 24, ".. please select a file ..")ButtonGadget(2, 82, 78, 70, 24, "Compare")ButtonGadget(4, 10, 78, 24, 24, "?", #PB_Text_Center)ButtonGadget(5, 38, 78, 40, 24, "Quit", #PB_Text_Center)ComboBoxGadget(6, 156, 80, 196, 22, #PB_Text_Center)AddGadgetItem(6,0,"MD5")AddGadgetItem(6,1,"SHA1")AddGadgetItem(6,2,"SHA2")AddGadgetItem(6,3,"SHA3")AddGadgetItem(6,4,"CRC32")SetGadgetState(6,0)TextGadget  (3, 10,108,300, 20, "")LoadFont    (0, "Arial", 11)For i = 0 To 6 : SetGadgetFont(i,FontID(0)) : Next iAddKeyboardShortcut(0, #PB_Shortcut_Command | #PB_Shortcut_Q, #PB_Event_CloseWindow)UseMD5Fingerprint()UseSHA1Fingerprint()UseSHA2Fingerprint()UseSHA3Fingerprint()UseCRC32Fingerprint()Repeat  Event = WaitWindowEvent(100)  Select Event    Case #PB_Event_Gadget      Gadget = EventGadget()      Select Gadget        Case 0, 1          LoadaFile(Gadget)          CompareAB()                  Case 2          CompareAB()                  Case 4          MessageRequester("Information", "TinyCompare compares the fingerprints of two files. If the fingerprints are identical, the chance is high, that the two files are identical.")                  Case 6          Select GetGadgetState(6)            Case 0: FingerType = #PB_Cipher_MD5   : Type$ = "MD5"            Case 1: FingerType = #PB_Cipher_SHA1  : Type$ = "SHA1"            Case 2: FingerType = #PB_Cipher_SHA2  : Type$ = "SHA2"            Case 3: FingerType = #PB_Cipher_SHA3  : Type$ = "SHA3"            Case 4: FingerType = #PB_Cipher_CRC32 : Type$ = "CRC32"          EndSelect          CheckFiles()          CompareAB()            EndSelect  EndSelectUntil Event = #PB_Event_CloseWindow Or Event = #PB_Event_Menu Or Gadget = 5; IDE Options = PureBasic 6.00 LTS (MacOS X - x64); CursorPosition = 56; FirstLine = 40; Folding = w; EnableXP; UseIcon = TinyCompare.ico; Executable = ../TinyCompare.app